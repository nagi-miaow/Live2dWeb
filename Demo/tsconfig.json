{
  "compilerOptions": {
    "target": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@framework/*": ["../Framework/src/*"]
    },
    "noImplicitAny": true,
    "useUnknownInCatchVariables": true,
    "lib": ["es2015", "dom"]
  },
  "include": [
    "./src/**/*.ts",
    "../Core/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
